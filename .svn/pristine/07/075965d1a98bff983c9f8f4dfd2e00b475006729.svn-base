@charset "utf-8";#header,#main{min-width:716px}body{overflow:hidden}#nav{position:fixed;top:0;left:0;width:210px;background:#2c3037;overflow:auto;z-index:1000}#nav li,#nav ul{margin:0;padding:0;display:inline}#nav h1{margin:0 0 20px;padding:0;height:70px;text-align:center;color:#fff;overflow:hidden}#nav .category a,#nav .category[data-direction]{padding-left:20px}#nav .category,#nav .category a{height:50px;line-height:50px;color:#fff}#nav h1.logo{background:url(../images/logo.png) center no-repeat #0096e0}#nav .category{opacity:.6;cursor:pointer;overflow:hidden}#nav .category:hover{background:#33373f;opacity:.6}#nav .category a{display:block;text-decoration:none}#nav .active{background:url(../images/active.png) center right no-repeat #393e47!important;opacity:1!important}#nav .active[data-direction]{background:#393e47!important}#nav .subcategory{display:none}#nav .subcategory a{padding-left:45px;height:36px;line-height:36px;display:block;font-size:13px;color:#fff;text-decoration:none;opacity:.6}#nav .subcategory a:hover{background:#33373f;opacity:.6}#nav .subcategory .active{background:url(../images/active.png) center right no-repeat #393e47!important;opacity:1!important}#nav .icon{margin-top:-3px;margin-right:6px;width:18px;height:18px;display:inline-block;background:url(../images/main-icon.png) center center no-repeat;vertical-align:middle}#nav .icon-global{background-position:0 0}#nav .icon-goods{background-position:0 -19px}#nav .icon-order{background-position:0 -38px}#nav .icon-shop{background-position:0 -57px}#nav .icon-supplier{background-position:0 -76px}#nav .icon-purchase{background-position:0 -95px}#nav .icon-system{background-position:0 -114px}#nav .icon-direction{float:right;width:50px;height:50px;display:inline-block}#nav [data-direction=up] .icon-direction{background:url(../images/direction-up.png) center no-repeat}#nav [data-direction=down] .icon-direction{background:url(../images/direction-down.png) center no-repeat}#header{height:30px;line-height:30px;background:#fff;font-size:14px}#header .info{float:right;position:relative;right:20px;color:#d3d6df}#header .info a{color:#007fbf;text-decoration:none}#header .info a:hover{text-decoration:underline}#header .username{color:#666}#main{margin-left:210px;overflow-y:hidden}